@model Bangazon.Models.OrderViewModels.CompleteOrderViewModel


@if (TempData["ErrorMessage"] != null)
{
    <p class="alert alert-success" id="errorMessage">@TempData["ErrorMessage"]</p>
}

@{
    ViewData["Title"] = "Complete Your Order";
}

<h2>Select your payment type to complete your order</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form id="completeOrder" asp-action="CompleteOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.OrderId" />
            <input type="hidden" asp-for="Order.CreatedDate" />
            <div class="form-group">
                @Html.LabelFor(model => model.Order.PaymentTypeId)
                @Html.DropDownList(
          "Order.PaymentTypeId",
          @Model.PaymentTypeId,
          new
          {
              @name = "Order.PaymentTypeId"
          }
      )

            </div>
            <div class="form-group">
                <input id="paymentTypeSubmit" type="submit" value="Done" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
