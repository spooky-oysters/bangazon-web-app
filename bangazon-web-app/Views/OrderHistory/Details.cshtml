@model Bangazon.Models.OrderHistoryViewModels.OrderHistoryDetailViewModel

<div>
    <h4>Order Details for Order #@Html.DisplayFor(model => model.Order.OrderId)</h4>
    <hr />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Products</th>
                <th>Description</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Price)
                </td>
            </tr>
    }
        </tbody>
        <tfoot>
            <tr>
                <th>Order Total</th>
                <td></td>
                <th>$@Model.OrderTotal</th>
            </tr>
        </tfoot>
    </table>

</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
