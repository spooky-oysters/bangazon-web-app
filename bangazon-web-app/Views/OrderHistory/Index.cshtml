@model Bangazon.Models.OrderHistoryViewModels.OrderHistoryViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Order History</h2>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Order #</th>
            <th>Date Completed</th>
            <th>Payment Method</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Orders) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompletedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentType.Description)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.OrderId">View</a>
            </td>
        </tr>
}
    </tbody>
</table>
